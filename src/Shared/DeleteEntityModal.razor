<MudDialog ClassActions="ma-2">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.DeleteForever" Class="mr-3 mb-n1" />
            @(string.IsNullOrWhiteSpace(TitleText) ? _defaultTitleText : TitleText)
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText>
            @(string.IsNullOrWhiteSpace(ContentText) ? _defaultContentText : ContentText)
        </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Transparent" Variant="Variant.Filled" Size="Size.Small" OnClick="Cancel">
            Cancel
        </MudButton>
        <MudButton Color="Color.Error" Variant="Variant.Filled" Size="Size.Small" OnClick="Submit">
            Delete
        </MudButton>
    </DialogActions>
</MudDialog>
@code {
    private string _defaultTitleText = "Delete Record";
    private string _defaultContentText = "Are you sure you want to delete this record?";

    [CascadingParameter]
    private MudDialogInstance _mudDialog { get; set; } = null!;

    [Parameter]
    public string? TitleText { get; set; }

    [Parameter]
    public string? ContentText { get; set; }

    private void Submit() => _mudDialog.Close(DialogResult.Ok(true));
    private void Cancel() => _mudDialog.Cancel();
}