<MudDialog ClassActions="ma-2">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.DeleteForever"
                     Color="Color.Error"
                     Class="mr-3 mb-n1" />
            @Title
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText>
            @Content
        </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Transparent"
                   Variant="Variant.Filled"
                   Size="Size.Small"
                   OnClick="Cancel">
            Cancel
        </MudButton>
        <MudButton Color="Color.Error"
                   Variant="Variant.Filled"
                   Size="Size.Small"
                   OnClick="Delete">
            Delete
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance _mudDialog { get; set; } = null!;

    [Parameter]
    public string Title { get; set; } = null!;

    [Parameter]
    public string Content { get; set; } = null!;

    private void Delete() => _mudDialog.Close(DialogResult.Ok(true));
    private void Cancel() => _mudDialog.Cancel();
}