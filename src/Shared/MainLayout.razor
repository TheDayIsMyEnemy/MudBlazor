@inherits MainLayoutBase

<MudThemeProvider Theme="@DefaultTheme"
                  @ref="@MudThemeProvider"
                  @bind-IsDarkMode="@IsDarkMode" />
<MudDialogProvider Position="DialogPosition.TopCenter"
                   MaxWidth="MaxWidth.ExtraSmall"
                   CloseButton="true"
                   CloseOnEscapeKey="true" />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Outlined.Menu"
                       Color="Color.Inherit"
                       Edge="Edge.Start"
                       OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudIconButton Icon="@(IsDarkMode ? @Icons.Filled.WbSunny : @Icons.Filled.Brightness4)"
                       Color="Color.Inherit"
                       OnClick="DarkModeToggle" />
        <ProfileMenu />
    </MudAppBar>
    <MudDrawer @bind-Open="IsDrawerOpened" Elevation="1" ClipMode="DrawerClipMode.Never">
        <MudDrawerHeader Class="justify-center">
            <MudIcon Icon="@Icons.Custom.Brands.MudBlazor" Size="Size.Large" />
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
